<section class="h-100 gradient-form" style="background-color: #1d1b3d">
    <div id="title" class="pb-5">
        <h1>
            Buy and Generate NFTs
        </h1>
        <h3>
            from our selection of drops
        </h3>
    </div>
    <div  class="mw-75 mh-25 pb-5">
        <div id="carouselBig" class="d-flex align-items-center justify-content-center mw-75 mh-25">
            <div id="carouselExampleIndicators" class="carousel " data-interval="false">
                <div class="carousel-inner p-2 rounded-px">
                 <div class="carousel-item active">
                        <img class=" w-100 " src="https://storage.cloud.google.com/bitfit/images/9.png" style="object-fit: scale-down;" alt="First slide">
                </div>   
                    {{#each nftimages}}
                    {{> nft-carousel}}
                    {{/each}}
                     
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

    <div id="dailydrops" class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4" id="dropSection">Never miss a drop</h1>
            <div>
                <h3>Out with the old and in with the new. Next Drop In</h3>
                <p id='infinitecountdown'></p>
            </div>
        </div>
    </div>

    <div id="topoftop">
        <div class="container text-center my-3">
            <h2 class="font-weight-light">Browse NFTs</h2>
            <div class="row mx-auto my-auto justify-content-center">
                <div id="recipeCarousel" class="carouselBottom carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-itemBottom  carousel-item active">
                            <div class="col-md-3">
                                <div class="card mx-3">
                                    <div class="card-img">
                                        <a href="/nft/12"><img src="https://storage.cloud.google.com/bitfit/images/12.png" class="img-fluid"></a>
                                    </div>
                                    <div class="card-img-overlay"></div>
                                </div>
                            </div>
                        </div>
                    {{#each nftimages }}

                    {{> homepage-browseNfts}}
                    <a href="/nft/{{inc @index}}">
                                        <div class="card-img-overlay"></div>
                                    </a>
                                </div>
                            </div>
                        </div>

                    {{/each}}

                    </div>
                    <a class="carousel-control-prev bg-transparent w-aut " href="#recipeCarousel" role="button"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon blueback" aria-hidden="true"></span>
                    </a>
                    <a class="carousel-control-next bg-transparent w-aut" href="#recipeCarousel" role="button"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon blueback" aria-hidden="true"></span>
                    </a>
                </div>
            </div>
            <h5 class="mt-2 fw-light"></h5>
        </div>

    </div>

</section>

<script src="/js/homepage.js"></script>
